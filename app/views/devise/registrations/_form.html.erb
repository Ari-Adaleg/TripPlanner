<%= stylesheet_link_tag 'form'%>
<%= javascript_pack_tag 'form' %>
<%= form_for :user, :html => {class: "form-group form"}, url: user_registration_path do |f| %>
<div class="form_title"><%=@title%></div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "First Name:", class: "form_label" %>
    <%= f.text_field :first_name, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name:", class: "form_label" %>
    <%= f.text_field :last_name, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :username, "Username:", class: "form_label" %>
    <%= f.text_field :username, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :email, "Email:", class: "form_label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :password, "Password:", class: "form_label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password:", class: "form_label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :country, "In which country do you live?", class: "form_label" %>
    <%= f.select :country, options_for_select(@countries, selected=@country), {include_blank: "Choose your country"},class: "form_input"%>
  </div>

  <div class="field">
    <%= f.label :province, "In which province/state do you live?", class: "form_label" %>
    <%= f.select :province, options_for_select(@territories, selected=@territory), {include_blank: "Choose your province/state:"},class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :city, "In which city do you live?", class: "form_label" %>
    <%= f.select :city, options_for_select(@cities), {include_blank: "Choose your city:"},class: "form_input" %>
  </div>
  <div class="actions">
    <%= f.submit submit_text, class: "btn btn-primary button" %>
  </div>
<% end %>

