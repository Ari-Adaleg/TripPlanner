<%= stylesheet_link_tag "form" %>
<div class="form-group form">
<%= form_for :users, url: user_registration_path do |f| %>
<div class="form_title">Sign up to TripPlanner</div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, class: "form_label" %>
    <%= f.text_field :first_name, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "form_label" %>
    <%= f.text_field :last_name, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :city, class: "form_label" %>
    <%= f.text_field :city, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :province, class: "form_label" %>
    <%= f.text_field :province, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :country, class: "form_label" %>
    <%= f.text_field :country, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :username, class: "form_label" %>
    <%= f.text_field :username, class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :email, class: "form_label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form_label" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form_input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form_label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</div>
