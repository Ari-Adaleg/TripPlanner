<%= javascript_pack_tag 'destination' %>

<%= form_for @trip, url: users_trips_path do |f| %>

<%= f.label :name, "What's the title of your trip?" %>
<%= f.text_field :name, placeholder: "ex. Canadian Roadtrip 2020" %>
<%= f.submit "Create title"%>

<% end %>

<%= form_for @destination, url: users_trip_destinations_path(current_user.trips.first), id: "destination_choice" do |f| %>

      <%= f.label :leaving_from, "Leaving from: "%>
      <%= f.text_field :leaving_from %>

      <%= f.label :arriving_to, "Destination: "%>
      <%= f.text_field :arriving_to %>

      <%= f.label :start_date, "Start date: "%>
      <%= f.date_field :start_date %>

      <%= f.label :end_date, "End date: "%>
      <%= f.date_field :end_date %>

      <%= submit_tag "Submit", data: {disable_with: false}%>
<% end %>

<div style="height: 400px;" id="map"></div>
