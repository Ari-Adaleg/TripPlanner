<div class="content">
<% if user_signed_in? %>
    <!--The url is "root_url" because at this stage we didn't establish the Desination routes.-->
    <%= form_for @destination, class: "form-inline", url: root_url do |f| %>
        <div class="row">
            <div class="col">
                <p><%= f.text_field :arriving_to, placeholder: "Which destination would you like to explore next?", class: "form-control", id: "inlineFormInput" %></p>
            </div>
            <p><%= f.submit "Let's go!", class: "btn btn-primary"%>
        </div>
    <% end %>

<% else !user_signed_in? %>

